{
    "name": "SearchSelected",
    "description": "Hotkey for searching selected text in a new tab",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["search.js"]
    }],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "images/tabFlipper16.png",
        "default_title": "Press Ctrl+k to search selected text in a new tab"
    },
    "commands": {
        "search": {
            "suggested_key": {
                "default": "Ctrl+K",
                "mac": "MacCtrl+K"
            },
            "description": "Search in a new tab"
        }
    },
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "icons": {
        "16": "images/tabFlipper16.png",
        "32": "images/tabFlipper32.png",
        "48": "images/tabFlipper48.png",
        "128": "images/tabFlipper128.png"
    }
}