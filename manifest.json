{
    "manifest_version": 2,
    "name": "SearchSelected",
    "version": "0.1.0",

    "description": "Hotkey for searching selected text in a new tab with a custom search engine.",

    "icons": {
        "16": "images/icon32.png",
        "32": "images/icon64.png",
        "48": "images/icon96.png",
        "128": "images/icon256.png"
    },

    "author": "Derek Kramer",

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "browser_action": {
        "default_icon": "images/icon32.png",
        "default_title": "Press Ctrl+k to search selected text in a new tab"
    },

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["search.js"]
    }],

    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+K",
                "mac": "MacCtrl+Shift+K"
            }
        }
    },

    "options_ui": {
        "page": "options/options.html",
        "chrome_style": true
    },

    "permissions": [
        "activeTab",
        "tabs",
        "storage"
    ]
}